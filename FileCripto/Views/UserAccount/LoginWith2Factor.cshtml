@model DataAccess.Models.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 align="center" ;> FileCrypto </h2>
<hr />
<h5 align="center"> Login </h5>

<div class="row">
    <div class="col-md-4">
        <form asp-action="LoginWith2Factor" asp-controller="UserAccount" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden="hidden">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" hidden="hidden">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src=@ViewBag.BarcodeImageUrl />
                <label asp-for="InputCode" class="control-label"></label>
                <input asp-for="InputCode" class="form-control" />
                <span asp-validation-for="InputCode" class="text-danger"></span>
            </div>
            <div class="form-group" hidden="hidden">
                <label asp-for="Key" class="control-label"></label>
                <input asp-for="Key" class="form-control" />
                <span asp-validation-for="Key" class="text-danger"></span>
            </div>
            <div class="buttonHolder">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script>
    $(function () {
        $.validator.setDefaults({ onkeyup: false });
    }</script>
@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }