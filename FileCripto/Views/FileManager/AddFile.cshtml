@model DataAccess.Models.AddFileModel
@{
    ViewData["Title"] = "Add File";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 align="center" ;> FileCrypto </h2>
<hr />
<h5 align="center"> Add File </h5>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFile" asp-controller="FileManager" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReceiverId" class="control-label">User</label>
                <select asp-for="ReceiverId" class="form-control js-select2">
                </select>
                <span asp-validation-for="ReceiverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.File, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.File, new { type = "file" })
                    @Html.ValidationMessageFor(m => m.File)
                </div>
                </div>
                <div class="buttonHolder">
                <input type="submit" value="Send File" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
</div>
<script>
    $(function () {
        $.validator.setDefaults({ onkeyup: false });
    }</script>
@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        MySelect2.MySelect2(".js-select2", "@Html.Raw(@Url.Action("GetUsers", "UserAccount"))", "User...");
        </script>
    }